@model eTeamProjectManagement.Models.ProjectViewModels.EditProjectViewModel

<!-- Modal -->
<div class="modal-dialog" role="document">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Edit Project</h4>
        </div>

        @using (Html.BeginForm())
        {
            <div class="modal-body form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(m => m.BeginDate, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.BeginDate, new { @class = "form-control text-center", @Value = "@Model.BeginDate" })
                        @Html.ValidationMessageFor(m => m.BeginDate)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Priority, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.DropDownListFor(m => m.Priority, new SelectList(Model.AllPriorities, "Id", "ProjectPriority"), "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Priority)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Status, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.DropDownListFor(m => m.Status, new SelectList(Model.AllStatus, "Id", "ProjectStatus"), "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Status)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ClientNumber, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.ClientNumber, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(m => m.ClientNumber)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.BillToClientNumber, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.BillToClientNumber, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(m => m.BillToClientNumber)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Cst, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.Cst, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(m => m.Cst)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ClientName, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.ClientName, new { @class = "form-control text-center" })
                        @Html.ValidationMessageFor(m => m.ClientName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ProjectType, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.DropDownListFor(m => m.ProjectType, new SelectList(Model.AllProjectTypes, "Id", "ProjectType"), "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ProjectType)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.AssignedTeam, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.DropDownListFor(m => m.AssignedTeam, new SelectList(Model.AllTeams, "Id", "TeamName"), "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AssignedTeam)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ProjectOwner, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.TextBoxFor(m => m.ProjectOwner, new { @class = "form-control text-center", Value = "@Model.ProjectOwner" })
                        @Html.ValidationMessageFor(m => m.ProjectOwner)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Description, new { @class = "control-label col-sm-3" })
                    <div class="col-sm-9">
                        @Html.TextAreaFor(m => m.Description, 3, 1, new { @class = "form-control", value = "TEST" })
                        @Html.ValidationMessageFor(m => m.Description)
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <form asp-controller="Project" asp-action="EditProject" method="post" class="form-inline" role="form">
                    <button type="submit" class="btn btn-danger">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </form>
            </div>
        }
    </div>
</div>