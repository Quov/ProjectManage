@model eTeamProjectManagement.Models.ProjectViewModels.ProjectContactViewModel
@if (Model.CurrentRun == 0)
{
    <div class="tab-pane active" id=@String.Concat("tab", @Model.Contact.ProjectContactId)>
        <div class="form-group">
            <label for="contactname" class="col-lg-2 control-label">Contact Name</label>
            <div class="col-lg-4">
                <input type="text" class="form-control text-center" id="contactname" placeholder="@Model.Contact.ContactName" disabled>
            </div>
            <label for="contactrole" class="col-lg-2 control-label">Contact Role</label>
            <div class="col-lg-4">
                <input type="text" class="form-control text-center" id="contactrole" placeholder="@Model.Contact.ContactRole" disabled>
            </div>
        </div>
        <div class="form-group">
            <label for="contactemail" class="col-lg-2 control-label">Contact Email</label>
            <div class="col-lg-4">
                <input type="text" class="form-control text-center" id="contactemail" placeholder="@Model.Contact.ContactEmail" disabled>
            </div>
            <label for="contactphone" class="col-lg-2 control-label">Contact Phone</label>
            <div class="col-lg-4">
                <input type="text" class="form-control text-center" id="contactphone" placeholder="@Model.Contact.ContactPhone" disabled>
            </div>
        </div>
        <div class="form-group">
            <label for="projdescription1" class="col-lg-2 control-label">Contact Notes</label>
            <div class="col-lg-10">
                <textarea rows="2" class="form-control" id="projdescription1" placeholder="@Model.Contact.ContactNote" disabled></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-8">
                <label for="contactUpdated" class="col-lg-2 control-label"></label>
            </div>
            <div class="col-lg-4">
                <div class="btn-group pull-right">
                    <button type="button" class="btn btn-warning btn-sm editcontact" data-id="@Model.Contact.ProjectId" contact-id="@Model.Contact.ProjectContactId">Edit Contact</button>
                    <button type="button" class="btn btn-danger btn-sm deletecontact" data-id="@Model.Contact.ProjectId" contact-id="@Model.Contact.ProjectContactId">Delete Contact</button>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="tab-pane" id=@String.Concat("tab", @Model.Contact.ProjectContactId)>
        <div class="form-group">
            <label for="contactname" class="col-lg-2 control-label">Contact Name</label>
            <div class="col-lg-4">
                <input type="text" class="form-control text-center" id="contactname" placeholder="@Model.Contact.ContactName" disabled>
            </div>
            <label for="contactrole" class="col-lg-2 control-label">Contact Role</label>
            <div class="col-lg-4">
                <input type="text" class="form-control text-center" id="contactrole" placeholder="@Model.Contact.ContactRole" disabled>
            </div>
        </div>
        <div class="form-group">
            <label for="contactemail" class="col-lg-2 control-label">Contact Email</label>
            <div class="col-lg-4">
                <input type="text" class="form-control text-center" id="contactemail" placeholder="@Model.Contact.ContactEmail" disabled>
            </div>
            <label for="contactphone" class="col-lg-2 control-label">Contact Phone</label>
            <div class="col-lg-4">
                <input type="text" class="form-control text-center" id="contactphone" placeholder="@Model.Contact.ContactPhone" disabled>
            </div>
        </div>
        <div class="form-group">
            <label for="projdescription1" class="col-lg-2 control-label">Contact Notes</label>
            <div class="col-lg-10">
                <textarea rows="2" class="form-control" id="projdescription1" placeholder="@Model.Contact.ContactNote" disabled></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-8">
                <label for="contactUpdated" class="col-lg-2 control-label"></label>
            </div>
            <div class="col-lg-4">
                <div class="btn-group pull-right">
                    <button type="button" class="btn btn-warning btn-sm editcontact" data-id="@Model.Contact.ProjectId" contact-id="@Model.Contact.ProjectContactId">Edit Contact</button>
                    <button type="button" class="btn btn-danger btn-sm deletecontact" data-id="@Model.Contact.ProjectId" contact-id="@Model.Contact.ProjectContactId">Delete Contact</button>
                </div>
            </div>
        </div>
    </div>
}
