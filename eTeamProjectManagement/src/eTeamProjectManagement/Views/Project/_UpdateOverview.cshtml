@model eTeamProjectManagement.Models.ProjectViewModels.OverviewUpdateViewModel

<!-- Modal -->
<div class="modal-dialog" role="document">
    <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Update Overview</h4>
        </div>

        <!--Need 4 text areas. 2 to display current update status, team and IT. 2 for potential additions. Perhaps the add update button reveals an input and button to submit?-->

        @using (Html.BeginForm())
        {
        <div class="modal-body form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.teamUpdate, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextAreaFor(m => m.teamUpdate.Description, 3, 1, new { @class = "form-control", value = "TEST" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.teamUpdate.LastModified, new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                    <input type="text" class="form-control text-center" id="teamLastModified" placeholder="@Model.teamUpdate.LastModified" disabled>
                </div>  
                <div class="col-sm-4 pull-right">
                    <button type="button" class="btn btn-warning btn-block">Add Team Update</button>     
                </div>                                                          
            </div>  
            <div class="form-group">
                @Html.LabelFor(m => m.ITUpdate, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">                    
                    @Html.TextAreaFor(m => m.ITUpdate.Description, 3, 1, new { @class = "form-control", value = "TEST" })
                </div>
            </div>  
            <div class="form-group">
                @Html.LabelFor(m => m.ITUpdate.LastModified, new { @class = "control-label col-sm-3" })
                <div class="col-sm-5">
                    <input type="text" class="form-control text-center" id="teamLastModified" placeholder="@Model.ITUpdate.LastModified" disabled>
                </div>
                <div class="col-sm-4 pull-right">
                    <button type="button" class="btn btn-warning btn-block">Add IT Update</button>
                </div>
            </div> 
        </div>
        <div class="modal-footer">
            <form asp-controller="Project" asp-action="EditProject" method="post" class="form-inline" role="form">
                <!--<button type="submit" class="btn btn-danger">Save</button>-->
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </form>
        </div>
        }
    </div>
</div>